page{
  background-color: #f9f9f9;
}
.header {
  width: 750rpx;
  height: 83rpx;
  display: flex;
  background: #fff;
  line-height: 78rpx;
  position: fixed;
  top: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  flex-direction: row;
  color: #646464;
  z-index: 100;
}

.header view.active {
  color: #ff791c;
}

.header .line {
  background-color: #108DEE;
  width: 34rpx;
  height: 7rpx;
}
.flow-header{
  background-color: #fff;
  margin: 30rpx 30rpx;
  padding:20rpx 90rpx 0 100rpx;
  white-space: nowrap;
  color: #7b7b7b;
  border-radius: 8rpx;
  position: fixed;
  top: 0;
  z-index: 1000;
} 
.line{
  width: 2rpx;
  height: 30rpx;
  background-color: rgb(216, 216, 216);
  margin: 0 120rpx;
}
.detail_item{
  color: #7b7b7b;
   display: flex; 
   flex-direction: column;
   margin-right: 30rpx;
   font-size: 26rpx;
  }
.detail_item.flow-active{
  color: #2f2f2f;
}
.border_line{
  width: 40rpx;
  height: 5rpx;
  border: 10%;
  background-color:#ff791c ;
  margin-top: 15rpx;
}
.list_item{
  background-color: #fff;
  width: 750rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}
.img-logo{
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
  padding: 5rpx;
  background-color: #fff;
  display: inline-block;
  border: 2rpx solid #eee;
}
.detail_btn{
  border: 1px solid #d6d5d5;
  border-radius: 30rpx;
  padding:8rpx 15rpx;
}
