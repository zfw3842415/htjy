  width: 690rpx;
  background-color: #f1f1f1;
  height: 20rpx;
}
/* 配送信息 */

.flow-delivery {
  background: #fff;
  background-size: 120rpx auto;
  width: 720rpx;
  margin: 15rpx;
  box-sizing: border-box;
}

.flow-delivery__title {
  width: 702rpx;
  padding: 15rpx 0;
  margin: 0 auto;
  background: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.flow-delivery__title-text {
  margin-right: 20rpx;
}

.flow-delivery__detail {
  padding: 24rpx;
  /* width: 690rpx; */
}
.detail-location{
  width: 635rpx;
}


.detail-content__title {
  margin-bottom: 6rpx;
}

.detail-content .detail-content__title-phone {
  margin-left: 10rpx;
}

.detail-content .detail-content__describe {
  font-size: 28rpx;
}
.line{
  width: 660rpx;
  height: 2rpx;
  margin: 22rpx 0 10rpx 0; 
  background-color: #f1f1f1;
}
