  width: 720rpx;
  margin:15rpx;
}
.p-left{
  padding: 20rpx 30rpx 20rpx 30rpx;
}
.Buyer_message{
  color: #252525;
  width: 710rpx;
  margin:  20rpx;
  box-sizing: border-box;
}
.points{
  border: 2rpx solid #ff791c;
  padding: 0 5rpx 0 5rpx;
}
.Copy{
  border: 2rpx solid #eee;
  padding: 0 8rpx 5rpx 8rpx;
}
.footer {
  position: fixed;
  bottom: 0;
