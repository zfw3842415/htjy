.checkoutList{
  width: 720rpx;
  background-color: #fff;
  margin:15rpx;
  box-sizing: border-box;
}
/* 会员价 */
.flow-shopList .flow-list-right .flow-cont.price-delete {
  font-size: 26rpx;
  color: #777;
  text-decoration: line-through;
}

.flow-shopList .grade-price {
  padding-top: 8rpx;
  font-size: 28rpx;
  color: #ff495e;
  text-align: right;
}
.CallWX{
  text-align: center;
  border-top: 2rpx solid #f5f5f5;
  padding: 20rpx 0 23rpx 0;
}
/* 顶部状态栏 */

.detail-header {
  position: relative;
  width: 100%;
  height: 145rpx;
}

.detail-header .header-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  height: 145rpx;
  width: 100%;
  /* height: 50rpx; */
  z-index: -1;
}
