.select-number {
  width: 165rpx;
  height: 45rpx;
  flex-direction: row;
  border: 1rpx solid rgb(231, 231, 231);
  border-radius: 5rpx;
  overflow: hidden;
}

.select-number .default {
  float: left;
  width:48rpx;
  height: 50rpx;
  line-height: 40rpx;
  padding: 0;
  background: #fff;
  color: #444;
  font-size: 40rpx;
  border-radius: unset;
}

.select-number .disabled {
  background: #f7f7f7;
  color: #ddd;
}

.select-number button:after {
  content: none;
  border: none;
}

.select-number input {
  float: left;
  width: 64rpx;
  border-right: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  text-align: center;
  font-size: 28rpx;
  color: #444;
}
