/*商品推荐*/
.goods-rem{
  margin-top: 20rpx;
  padding: 20rpx;
}
.goods-rem .title{
  display: table;
  width: 100%;
  font-size: 30rpx;
  color: #999;
  white-space: nowrap;
  border-spacing: 0.5rem 0;
}

.goods-rem .title::before,.goods-rem .title::after{
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#D8D8D8, #D8D8D8) repeat-x center;
  background-size: 1px 1px;
}
.goods-list{
  margin-top: 30rpx;
}
.goods-list .goods-item{
   display:inline-block;
   width:350rpx;
   background-color: #fff;
   font-size: 0;
   overflow: hidden;
   height: auto;
   border-radius: 10rpx;
   margin-right: 10rpx;
   margin-bottom: 10rpx;
}
.goods-list .goods-item:nth-child(even){
  margin-right: 0;
}
.goods-list .goods-item image{
  width: 350rpx;
  height: 350rpx;
}
.goods-list .goods-item .name{
  margin: 14rpx 0;
  height: 76rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-list .goods-item .price{
  display: flex;
  padding:0 20rpx 30rpx;
}
.goods-list .goods-item .price .price-l{
  font-size: 32rpx;
  color: red;
  flex: 1;
  font-weight: bold;
  font-family: Verdana;
}
.goods-list .goods-item .price .price-l .font-m{
   font-size: 24rpx;
}
.goods-list .goods-item .price .price-r .buy{
   background-color: #f2f2f2;
   border-radius: 50%;
   padding: 6rpx;
}
.goods-list .goods-item .price .price-r .buy .iconfont{
  font-size:32rpx;
  font-weight: bold;
  color: #333;
}


