.no_Produce {
  font-size: 30rpx;
  text-align: center;
  color: #6d6d6d;
  margin-top: 135rpx;
}

/* 树形分类 */
.cate-content-30 .title {
  height: 65rpx;
  line-height: 65rpx;
  background: white;
  /* border-left: 5px solid #2d7dee; */
  font-size: 13px;
  border-bottom: 1px solid #f3f3f3;
  text-indent: 10px;
  display: flex;
  justify-content: space-between;
}

.cate-content-30 .cate {
  height: 65rpx;
  line-height: 65rpx;
  border-bottom: 1px solid #f3f3f3;
  display: flex;
  font-size: 13px;
  background: white;
  flex-wrap: wrap;
  color: #666;
}
.flex-item-tit-more{
  font-size: 28rpx;
  color: #999;
  width:100%;
  display:inline-block;
  text-align: center;
}
