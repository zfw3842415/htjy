.container{
  background-color: #f4f4f4;
}
.img_bg{
  width: 712rpx;
  height: 285rpx;
  border-radius: 50rpx 50rpx 0 0;
}
.link_btn{
  width: 285rpx;
  height: 60rpx;
  margin-top: 30rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #ff7600;
  border-radius: 50rpx;
}
/* 选择充值金额 */
.view-header{
  background-color: #fff;
  width: 100%;
  height: 300rpx;
  margin-top: -20rpx;
  border-radius: 30rpx 30rpx 0 0;
}
.title{
  margin-left: 20rpx;
  margin-top: 50rpx;
}

.ui-radio radio,.ui-radio checkbox {
  display: none;
}

.label{
  margin-left: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}

.ui-radio{
  border: 1px solid #D9D9D9;
  border-radius: 5px;
  width: 210rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  margin: 25rpx 15rpx;
  white-space:nowrap;
}

.ui-radio.active{
  background-color: #ff791c;
  color: #fff;
  border-radius: 5px;
  border: 1px solid #ff791c;
  width: 210rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  margin: 25rpx 15rpx;
}

.ui-radio.active .text{
  color:#fff;
}
.other_btn{
  border: 1px solid #D9D9D9;
  border-radius: 5px;
  width: 208rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  margin: 4rpx 25rpx;
  white-space:nowrap;
}
.active{
  background-color: #ff791c;
  color: #fff;
  border-radius: 5px;
  border: 1px solid #ff791c;
}
radio{
  transform:scale(0.8);
}
radio .wx-radio-input.wx-radio-input-checked {
  border-color: #ff791c !important;
  background: #ff791c;
}
.show_input{
  border: 2rpx solid #eee;
  width: 675rpx;
  margin-left: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  margin: 30rpx 24rpx 30rpx 24rpx;
}
.line{
  width: 750rpx;
  height: 20rpx;
  margin-top: 30rpx;
  background-color: #f7f7f7;
}
.welfare_title{
  padding: 30rpx 25rpx;
}
.line2{
  width: 140rpx;
  background-color: #ff791c;
  height: 7rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
}
.welfare_center{
  padding:25rpx 30rpx 290rpx 30rpx;
  letter-spacing: 0.1rem;
  color:#808080
}
.btn_footer{
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width: 750rpx;
  height:170rpx;
  padding: 30rpx 20rpx;
  border-top: 2rpx solid rgb(240, 240, 240);
}
.btn_footer .btn_recharge{
  width: 700rpx;
  height: 83rpx;
  text-align: center;
  line-height: 83rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
}
.pay-method .pay-item {
  padding: 35rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgb(248, 248, 248);
}

.pay-method .pay-item .item-left_icon {
  padding: 5rpx 18rpx 5rpx 12rpx;
  background-color: #00c800;
  width: 20rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.pay-method .pay-item .item-left_icon.wechat {
  color: #fff;
}
.item-right{
  width: 30rpx;
  height: 40rpx;
  background-color: #00c800;
  border-radius: 50%;
  padding-left: 8rpx;
}
.btn{
  width: 690rpx;
  /* height: 75rpx; */
  background-color:#37b460 ;
  border-radius: 37.5rpx;
  color: #fff;
  margin: 120rpx 30rpx;
  text-align: center;
  padding: 20rpx 0;
}


